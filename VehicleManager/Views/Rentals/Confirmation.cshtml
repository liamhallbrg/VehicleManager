@model VehicleManager.ViewModels.RentalCustomerVM

@{
    ViewData["Title"] = "Confirmation";
}

<section class="ftco-section bg-light">
            <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card no-hov" style="border-radius: 10px;">
                            <div class="card-header px-4 py-5">
                                <h5 class="text-muted mb-0">THANK YOU!</h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0" style="color: #1089ff;">Receipt</p>
                                </div>
                                <div class="card shadow-0 border mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <img src="@Model.ImgUrl"
                                                     class="img-fluid" alt="Phone">
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0">@Html.DisplayFor(m => m.Brand)</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@Html.DisplayFor(m => m.PlateNumber)</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@Html.DisplayFor(m => m.PickUpDate)</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@Html.DisplayFor(m => m.ReturnDate)</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">€@Html.DisplayFor(m => m.TotalPrice)</p>
                                            </div>
                                        </div>
                                        <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                        <div class="row d-flex align-items-center">
                                            <div class="col-md-2">
                                                <p class="text-muted mb-0 small">Track Rental</p>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="progress" style="height: 6px; border-radius: 16px;">
                                                    <div class="progress-bar" role="progressbar"
                                                         style="width: 65%; border-radius: 16px; background-color: #1089ff;" aria-valuenow="65"
                                                         aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <div class="d-flex justify-content-around mb-1">
                                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Car being prepared</p>
                                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Ready for pickup</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between pt-2">
                                    <p class="fw-bold mb-0">Booking Details</p>
                                </div>

                                <div class="d-flex justify-content-between pt-2">
                                    <p class="text-muted mb-0">Rental Number : @Html.DisplayFor(m => m.RentalId)</p>
                                    <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> €@(Model.TotalPrice * 0.8)</p>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0"></p>
                                    <p class="text-muted mb-0"><span class="fw-bold me-4">VAT 25%</span>€@(Model.TotalPrice * 0.2)</p>
                                </div>

                                <div class="d-flex justify-content-between mb-5">
                                    <p class="text-muted mb-0">Booking Made : @Html.DisplayFor(m => m.BookingMade)</p>
                                    <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                                </div>
                            </div>
                            <div class="card-footer border-0 px-4 py-5"
                                 style="background-color: #1089ff; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                                <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                                    Total
                                    paid: <span class="h2 mb-0 ms-2" style="color: white;">€@Model.TotalPrice</span>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>