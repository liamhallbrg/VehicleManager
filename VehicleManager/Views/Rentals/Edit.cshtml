@model VehicleManager.Models.Rental

@{
    ViewData["Title"] = "Edit";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <h1>Edit</h1>

                <h4>Rental</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                            <div class="form-group">
                                <label asp-for="CarId" class="control-label">Car</label>
                                <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars">
                                    <option>Select a car</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerId" class="control-label"></label>
                                <input asp-for="CustomerId" class="form-control" readonly/>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Pick-up date</label>
                                <input name="pickupDate" type="text" class="form-control" id="book_pick_date" placeholder="Date" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Drop-off date</label>
                                <input name="returnDate" type="text" class="form-control" id="book_off_date" placeholder="Choose Pickup Date" autocomplete="off" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="BookingMade" class="control-label"></label>
                                <input asp-for="BookingMade" class="form-control" />
                                <span asp-validation-for="BookingMade" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="TotalPrice" class="form-control" />
                                <span asp-validation-for="TotalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}